<?xml version="1.0"?>
<package >
    <metadata>
        <id>HIC.RDMP.Plugin</id>
        <version>$version$</version>
        <authors>gimcallister</authors>
        <owners>gimcallister</owners>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <description>Package for creating RDMP plugins</description>
        <releaseNotes>Initial tests.</releaseNotes>
        <copyright>Copyright 2016</copyright>
        <tags>HIC RDMP Plugin</tags>
    </metadata>
    <files>

        <!-- Source code for all dependencies, except CatalogueLibrary.Database -->
        <file src="DataLoad\Engine\LoadModules\LoadModules.Generic\**\*.cs" target="src\DataLoad\Engine\LoadModules\LoadModules.Generic" />
        <file src="DataLoad\Engine\DataLoadEngine\**\*.cs" target="src\DataLoad\Engine\DataLoadEngine" />
        <file src="CatalogueManager\CatalogueLibrary\**\*.cs" target="src\CatalogueManager\CatalogueLibrary" />
        <file src="Logging\HIC.Logging\**\*.cs" target="src\Logging\HIC.Logging" />
        <file src="Reusable\MapsDirectlyToDatabaseTable\**\*.cs" target="src\Reusable\MapsDirectlyToDatabaseTable" />
        <file src="Reusable\MapsDirectlyToDatabaseTableUI\**\*.cs" target="src\Reusable\MapsDirectlyToDatabaseTableUI" />
        <file src="Reusable\ReusableLibraryCode\**\*.cs" target="src\Reusable\ReusableLibraryCode" />
        <file src="Reusable\ReusableUIComponents\**\*.cs" target="src\Reusable\ReusableUIComponents" />
        <file src="Validation\HIC.Common.Validation\**\*.cs" target="src\Validation\HIC.Common.Validation" />

        <file src="Plugin\Plugin\bin\$Configuration$\*.dll" target="lib\net45" exclude="Plugin\Plugin\bin\$Configuration$\Plugin.dll" />
        <file src="Plugin\Plugin\bin\$Configuration$\*.pdb" target="lib\net45" exclude="Plugin\Plugin\bin\$Configuration$\Plugin.pdb" />
        <file src="Plugin\Plugin\bin\$Configuration$\*.exe" target="lib\net45" exclude="Plugin\Plugin\bin\$Configuration$\PluginPackager.exe" />

        <!-- Tool for packaging plugins -->
        <file src="Developer\PluginPackager\bin\$Configuration$\PluginPackager.exe" target="tools\PluginPackager" />
        <file src="Developer\PluginPackager\bin\$Configuration$\CatalogueLibrary.dll" target="tools\PluginPackager" />
        <file src="Developer\PluginPackager\bin\$Configuration$\MapsDirectlyToDatabaseTable.dll" target="tools\PluginPackager" />
        <file src="Developer\PluginPackager\bin\$Configuration$\ReusableLibraryCode.dll" target="tools\PluginPackager" />
        <file src="Developer\PluginPackager\bin\$Configuration$\CommandLine.dll" target="tools\PluginPackager" />
        <file src="Developer\PluginPackager\bin\$Configuration$\RDMPStartup.dll" target="tools\PluginPackager" />

    </files>
</package>